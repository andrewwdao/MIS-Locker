#
# This is a project Makefile. It is assumed the directory this Makefile resides in is a
# project subdirectory.
#

CC=gcc

###############################################################################
# INCLUDES DIRECTION
###############################################################################
IDIR =     /                                                               \
###############################################################################
# INCLUDES DIRECTION
###############################################################################
_DEPS =                                                                    \
            Rasp_HC595.h                                                   \
												   						   \
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))
###############################################################################
# OBJECTS CREATED
###############################################################################
_INIT_OBJ =                                                                \
            peripheral_init.o                                              \
            Rasp_HC595.o												   \

INIT_OBJ = $(patsubst %,$(ODIR)/%,$(_INIT_OBJ))

_MAIN_OBJ =                                                                \
			peripheral_main.o                                              \
            Rasp_HC595.o												   \
			
MAIN_OBJ = $(patsubst %,$(ODIR)/%,$(_MAIN_OBJ))

###############################################################################
# OBJECTS DIRECTORY
###############################################################################
ODIR=obj
###############################################################################
# LIBRARY DIRECTORY
###############################################################################
LDIR =/lib
###############################################################################
# OUTSIDE LIBRARY INCLUDE
###############################################################################
LIBS =                                                                     \
  #          -l wiringPi                                                   \
###############################################################################
# DEFINES
###############################################################################
CFLAGS  = -l wiringPi -O2 -Wall -pipe -I$(IDIR)                            \

$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

peripheral_init: $(INIT_OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

peripheral_main: $(MAIN_OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~ 
	rm -rf peripheral_init
	rm -rf peripheral_main